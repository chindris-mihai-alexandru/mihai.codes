# Cloudflare Pages Security Headers
# https://developers.cloudflare.com/pages/configuration/headers/

/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 0
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=()
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin

# Enable HSTS (be careful - this is cached by browsers for 1 year)
# Uncomment after confirming HTTPS works correctly
#  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

# Content Security Policy
# Note: 'unsafe-inline' needed for Tailwind, 'wasm-unsafe-eval' for Qwik
  Content-Security-Policy: default-src 'self'; script-src 'self' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' https://fonts.gstatic.com; connect-src 'self'; frame-ancestors 'none'; object-src 'none'; base-uri 'self'; form-action 'self'

# Cache immutable build assets for 1 year
/build/*
  Cache-Control: public, max-age=31536000, immutable

# Cache static assets for 1 week
/assets/*
  Cache-Control: public, max-age=604800

# Don't cache HTML pages
/*.html
  Cache-Control: no-cache
